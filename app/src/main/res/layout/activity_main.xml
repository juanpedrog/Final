<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.afinal.aplicacion.juanpedrog.recordatorio.MainActivity">

    <TextView
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/principal"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#C0CA33"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/nuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRegistros"
        android:layout_below="@+id/principal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnConsulta"
        android:layout_below="@+id/nuevo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />
    <ImageView
        android:id="@+id/boton"
        android:src="@drawable/button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="100dp"/>
</RelativeLayout>
